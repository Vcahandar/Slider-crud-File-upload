@model Blog
@{
    ViewData["Title"] = "Detail";
}

<div class="container-fluid mx-5 my-3">
    <h3>Update Blog</h3>
    <div class="img-area">
        <img src="~/img/@Model.Image" style="height:200px;" alt="Alternate Text" />
    </div>
    <form asp-action="Edit" method="get" enctype="multipart/form-data">
        <div class="form-group my-3">
            <input style="width:300px !important" class="form-control" asp-for="Photo" disabled>
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>
        <div class="form-group mt-5">
            <label for="formFile" class="form-label"><b>Header</b></label>
            <input class="form-control" type="text" id="formFile" asp-for="Header" disabled>

        </div>
        <div class="form-group mt-5">
            <label for="formFile" class="form-label"><b>Descrition</b></label>
            <input class="form-control" type="text" id="formFile" asp-for="Description" disabled>
        </div>
        <div class="form-group mt-5">
            <label for="formFile" class="form-label"><b>Date</b></label>
            <input class="form-control" type="date" id="formFile" asp-for="Date" disabled>
        </div>
        <a class="btn btn-primary" asp-controller="Blog" asp-action="Index">Back</a>
       
    </form>
</div>


